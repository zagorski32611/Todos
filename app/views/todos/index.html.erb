<p id="notice"><%= notice %></p>

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'View list', todos_path %></li>
  <li><%= link_to 'New todo', new_todo_path %></li>
</ul>

<h1>Listing Todos</h1>

<table class="tabel table-bordered">
  <thead>
    <tr class="boredered">
      <th>Title</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td>
          <span class="has-tooltip" data-toggle="tooltip" title="<%= "Created on #{todo.created_at.strftime("%m/%e/%Y at %w:%M %p")}, Last modified on #{todo.updated_at.strftime("%m/%e/%Y at %w:%M %p")}" %>">
            <%= todo.title %>
          </span>
        </td>
        <td><%= todo.notes %></td>
        <td><button class="btn"><%= link_to 'Show', todo %></button></td>
        <td><button class="btn"><%= link_to 'Edit', edit_todo_path(todo) %></button></td>
        <td><button class="btn"><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
  <%= link_to new_todo_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-inbox"></i> New Todo
  <% end %>

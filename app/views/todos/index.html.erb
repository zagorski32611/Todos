<p id="notice"><%= notice %></p>

<h1>Listing Todos</h1>

<table class="tabel table-bordered">
  <thead>
    <tr class="boredered">
      <th>Title</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.notes %></td>

        <td><button type="submit" class="btn btn-primary"><%= link_to 'Show', todo %></button></td>
        <td><button type="submit" class="btn btn-primary"><%= link_to 'Edit', edit_todo_path(todo) %></button></td>
        <td><button type="submit" class="btn btn-primary"><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
  <button class="btn-primary" >
<%= link_to 'New Todo', new_todo_path %>
  </button>
